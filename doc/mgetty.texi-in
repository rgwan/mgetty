! 			     tm->tm_hour, tm->tm_min, tm->tm_sec, ws,
! 			     ( errno <= sys_nerr ) ? sys_errlist[errno]:
! 			     "<error not in list>" );
  	    fflush(log_fp);
  	    if ( level == L_FATAL )
  	    @{
--- 143,150 ----
  	@}
  	else
  	@{
! 	    fprintf(log_fp, "\n%d.%d./%02d:%02d:%02d  %s: errno = %d", tm->tm_mday, tm->tm_mon+1,
! 			     tm->tm_hour, tm->tm_min, tm->tm_sec, ws, errno);
  	    fflush(log_fp);
  	    if ( level == L_FATAL )
  	    @{
***************
*** 160,166 ****
  		else	/* last resort */
  		@{
  		    mail_logfile = TRUE;
- 		    atexit( logmail );
  		@}
  	    @}
  	@}
